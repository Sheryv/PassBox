<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                tools:context="com.sheryv.PassBox.list_profile">

    <TextView
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content" android:id="@+id/prof_item_text" android:layout_toLeftOf="@+id/prof_delete" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:paddingTop="16dp" android:paddingBottom="16dp"
            android:layout_alignBottom="@+id/prof_delete" android:layout_alignTop="@+id/prof_delete"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prof_delete" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:src="@drawable/ic_delete_white_36dp" android:scaleType="fitCenter" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_margin="2dp"
            android:visibility="visible"
            android:focusable="false"
            android:onClick="deleteProfile"/>

</RelativeLayout>
